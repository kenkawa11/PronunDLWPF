<Window x:Class="PronunDLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pronounce Downloader" Height="400" Width="500" PreviewDragOver="Window_PreviewDragOver" Drop="Window_Drop" Icon="/icon.png">

    <DockPanel>
        <Menu DockPanel.Dock="Top" Margin="0,-1,0,0">
            <MenuItem Header="File (_F)">
                <MenuItem Header="Open (_O)" Command="{Binding BtnFile}" />
                <MenuItem Header="Media Directory(_O)" Command="{Binding BtnDir}"  />
            </MenuItem>
            <MenuItem Header="Help (_H)" />
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
        </StatusBar>
        <Grid Background="#FFDBEBEA">
            <Button x:Name="doneBtn" Command="{Binding Readprocess}" IsEnabled="{Binding IsActiveDone}" Content="Done" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="100"  FontSize="16" FontFamily="Arial Black" RenderTransformOrigin="0.462,-1.489" Margin="70,157,0,0"/>
            <Button Content="Cancel" Command="{Binding Cancel}" HorizontalAlignment="Left" Height="40" Margin="245,157,0,0" VerticalAlignment="Top" Width="100" FontSize="16" FontFamily="Arial Black"/>
            <Label x:Name="label1" Content="{Binding Status}" HorizontalAlignment="Left" Height="35" Margin="111,272,0,0" VerticalAlignment="Top" Width="152" RenderTransformOrigin="0.781,1.001" FontFamily="Arial Black" FontSize="20"/>
            <Label x:Name="label2" Content="{Binding Progress}" HorizontalAlignment="Left" Height="34" Margin="353,228,0,0" VerticalAlignment="Top" Width="113" FontSize="20" FontFamily="Arial Black"/>
            <ProgressBar Value="{Binding BarProgress}" HorizontalAlignment="Left" Height="20" Margin="35,235,0,0" VerticalAlignment="Top" Width="300" Minimum="0" Maximum="100"/>
            <TextBox HorizontalAlignment="Left" Height="30" Margin="29,38,0,0" Text="{Binding Dir}" TextWrapping="Wrap" VerticalAlignment="Top" Width="450"/>
            <Label Content="Directory where media fiiles are saved" HorizontalAlignment="Left" Height="30" Margin="35,8,0,0" VerticalAlignment="Top" Width="369"  FontFamily="Arial Black" FontSize="16"/>
            <TextBox HorizontalAlignment="Left" Height="30" Margin="35,107,0,0" Text="{Binding Fn}" TextWrapping="Wrap" VerticalAlignment="Top" Width="450"/>
            <Label Content="Target file" HorizontalAlignment="Left" Height="30" Margin="35,77,0,0" VerticalAlignment="Top" Width="380" FontFamily="Arial Black" FontSize="16"/>
        </Grid>
    </DockPanel></Window><!--<Window x:Class="PronunDLWPF.MainWindow"
