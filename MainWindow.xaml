<Window x:Class="PronunDLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PronunDLWPF"
        mc:Ignorable="d"
        Title="M" Height="300" Width="500" PreviewDragOver="Window_PreviewDragOver" Drop="Window_Drop">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Select file" HorizontalAlignment="Left" Height="40" Margin="93,19,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click" FontFamily="Arial Black" FontSize="20" Grid.Column="1"/>
        <TextBox x:Name="txtifile" HorizontalAlignment="Left" Height="40" Margin="15,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Grid.ColumnSpan="2"/>
        <Button Content="Done" HorizontalAlignment="Center" Height="40" Margin="0,17,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click_1" FontSize="20" FontFamily="Arial Black" Grid.Row="1" RenderTransformOrigin="0.462,-1.489"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Height="40" Margin="45,17,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click_2" FontSize="20" FontFamily="Arial Black" Grid.Row="1" Grid.Column="1"/>
        <Label x:Name="label1" Content="{Binding Status}" HorizontalAlignment="Left" Height="35" Margin="43,0,0,0" VerticalAlignment="Center" Width="160" RenderTransformOrigin="0.781,1.001" Grid.Row="3" FontFamily="Arial Black" FontSize="20" Grid.Column="1"/>
        <Label x:Name="label2" Content="{Binding Progress}" HorizontalAlignment="Left" Height="35" Margin="35,0,0,0" VerticalAlignment="Center" Width="200" Grid.Row="3" FontSize="20" FontFamily="Arial Black"/>
        <ProgressBar Value="{Binding BarProgress}" HorizontalAlignment="Left" Height="20" Margin="180,0,0,0" VerticalAlignment="Center" Width="300" Minimum="0" Maximum="100" Grid.ColumnSpan="2" Grid.Row="2"/>
        <Label Content="Progress" HorizontalAlignment="Left" Height="40" Margin="50,18,0,0" VerticalAlignment="Top" Width="120" FontSize="20" FontFamily="Arial Black" Grid.Row="2"/>
    </Grid>
</Window>
